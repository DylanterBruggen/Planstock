@model SigninViewModel

<style>
	input::placeholder {
		color: rgba(255, 255, 255, .3) !important;
	}

	input {
		color: rgba(255, 255, 255, 1) !important;
	}

	button:hover {
		background: rgba(255, 255, 255, .8) !important;
		color: #131517;
	}

	.validation-error {
		color: rgba(255, 0, 0, 0.5);
		font-size: 0.875rem;
	}
</style>

<section style="display: flex; justify-content: center; align-items: center;">
	<form asp-action="SignIn" asp-controller="Account" method="post" style="display: flex; color: white; max-width: fit-content; flex-direction: column;" class="bg-card border-card">
		<div style="display: flex; flex-direction: column; gap: 1rem; padding: 1rem;">
			<div style="display: flex; flex-direction: column; gap: .5rem">
				<i style="font-size: 2.5rem; padding: 1rem; background: rgba(255, 255, 255, 0.3); max-width: fit-content; border-radius: 99rem" class="ph ph-door-open"></i>
				<h4 style="padding: 0rem; margin: 0rem" class="text">Welcome to PlanStock</h4>
				<p style="padding: 0rem; margin: 0rem" class="subtext fw-normal">Please sing in or sign up below</p>
			</div>
			<div style="display: flex; flex-direction: column; gap: .5rem">
				<label for="emailInput" class="subtext">Email</label>
				<input id="emailInput" class="inputtext bg border-card" style="border-radius: .5rem; padding: .4rem .8rem; min-width: 300px" asp-for="Email" type="email" placeholder="user@email.com" />
				<span asp-validation-for="Email" class="validation-error"></span>
			</div>
			<div style="display: flex; flex-direction: column; gap: .5rem">
				<label for="passwordInput" class="subtext">Password</label>
				<input id="passwordInput" class="inputtext bg border-card" style="border-radius: .5rem; padding: .4rem .8rem; min-width: 200px" asp-for="Password" type="password" placeholder="****" />
				<span asp-validation-for="Password" class="validation-error"></span>
			</div>

			<button type="submit" style="background: #fff; width: 100%; color:#131517; border-radius: .5rem; padding: .4rem .8rem; font-weight: 600;" class="border-card">Sign in</button>

		</div>
		<div style="display: flex; padding: 1rem; flex-direction: column; gap: 1rem ; border-top: 1px solid rgba(255, 255, 255, 0.16)">
			<a asp-action="Signup" style=" border-radius: .5rem; border: 0px; text-decoration:underline; font-weight: 600; text-align: center;" class="inputtext">Sign up instead</a>

			<button type="submit" style="background: rgba(255, 255, 255, 0.16); width: 100%; border-radius: .5rem; border: 0px; padding: .4rem .8rem; font-weight: 600;" class="subtext">Forgot password?</button>

		</div>
	</form>
</section>
